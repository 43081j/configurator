{
  "name": "devtool-configurator",
  "version": "0.0.1",
  "description": "A tool for configuring various JS/TS developer tools.",
  "keywords": [
    "oxlint",
    "eslint",
    "prettier",
    "config"
  ],
  "homepage": "https://github.com/43081j/devtool-configurator#readme",
  "bugs": {
    "url": "https://github.com/43081j/devtool-configurator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/devtool-configurator.git"
  },
  "license": "MIT",
  "author": "James Garbutt (https://github.com/43081j)",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run --workspaces build",
    "dev": "npm run dev -w @43081j/configurator-app",
    "format": "prettier --write \"packages/*/src/**/*\"",
    "lint:format": "prettier --check \"packages/*/src/**/*\"",
    "lint:js": "oxlint packages/cli packages/core packages/app",
    "lint:types": "npm run lint:types --workspaces --if-present",
    "lint": "npm run lint:format && npm run lint:js && npm run lint:types",
    "test": "vitest run"
  },
  "devDependencies": {
    "oxlint": "^1.35.0",
    "prettier": "^3.7.4",
    "vitest": "^4.0.16"
  }
}
